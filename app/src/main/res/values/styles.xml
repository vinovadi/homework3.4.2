<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryBlack</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkBlack</item>
        <item name="colorAccent">@color/colorAccentBlack</item>
        <item name="colorButtonNormal">@color/colorPrimaryDarkBlack</item>
        <item name="android:windowBackground">@color/colorPrimaryBlack</item>
    </style>

    <style name="MarginSmall" parent="AppTheme">
        <item name="android:layout_margin">1dp</item>
    </style>

    <style name="MarginMedium" parent="AppTheme">
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="MarginBig" parent="AppTheme">
        <item name="android:layout_margin">10dp</item>
    </style>

</resources>
